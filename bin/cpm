#!/usr/bin/env node

/**
 * Module dependencies.
 */

var program = require('commander')
  , mkdir = require('mkdirp').sync
  , pkg = require('../package')
  , cpm = require('..')

// options

program
  .version(pkg.version)
  .parse(process.argv);

// args

var args = program.args;

// zero args

if (!args.length) program.help();

// install

console.log();
mkdir('src');
args.forEach(function(name){
  cpm.install(name);
});

// exit

process.on('exit', function(){
  console.log();
});